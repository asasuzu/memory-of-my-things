<%= form_with(url: search_posts_path, method: :get ) do |f| %>
  <div class="search-form">
    <div class="search-input">
      <%= f.text_field :keyword, class: "form-control", placeholder: "キーワードで検索" %>
    </div>
    <div class="search-input">
      一緒に過ごした期間：<%= f.select :spend_time, Post.spend_times.keys.map { |k| [I18n.t("enums.post.spend_time.#{k}"), k] }, include_blank: "指定なし" %>
    </div>
    <%= f.button class: "search-button" do %>
      <i class="fas fa-search"></i> 検索
    <% end %>
  </div>

<% end %>

