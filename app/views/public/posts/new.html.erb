<h1>新規投稿</h1>
<%= form_with model: @post, url:posts_path do |f| %>
	<%= render 'layouts/error_messages', resource: @post %>
<div class="flex">
  <div>
    <%= f.label :image, "画像" %>
    <div class="image_field">
      <%= f.file_field :image, accept: "image/*" %>
    </div>
  </div>
  <div class="flex align-center pl5">
    <%= f.label :title, "たいとる" %>
    <%= f.text_field :title %>
  </div>
  <div class="flex align-center pl5">
    <%= f.label :body, "説明" %>
    <%= f.text_area :body, rows: 3 %>
  </div>
  <div class="flex align-center pl5">
    <%= f.label :is_public, "公開or非公開" %>
    <div class="select_field">
      <%= f.radio_button :is_public, true %>
      <%= f.label :is_public, "公開", class: "text-active" %>
      <%= f.radio_button :is_public, false %>
      <%= f.label :is_public, "非公開", class: "text-invalid" %>
    </div>
  </div>
  <div class="flex align-center pl5">
    <%= f.submit '投稿', class: "btn btn-primary" %>
  </div>
  <% end %>
</div>
