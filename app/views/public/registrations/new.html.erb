<h2 class="form_title">新規会員登録</h2>
<div class="post_form">
  <%= form_with model: @user, url: registration_path(resource_name) do |f| %>
    <%= render 'layouts/error_messages', resource: @user %>
    <div class="form_field">
      <%= f.label :name, "名前" %>
      <%= f.text_field :name, required: true, maxlength: 12 %>
    </div>
    <div class="form_field">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, autocomplete: "email", required: true %>
    </div>
    <div class="form_field">
      <%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)" %>
      <%= f.password_field :password, autocomplete: "new-password", required: true, minlength: 6 %>
    </div>
    <div class="form_field">
      <%= f.label :password_confirmation, "パスワード(確認用)" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true, minlength: 6 %>
    </div>
    <div class="form_submit">
      <%= f.submit "新規登録", class: "submit-btn" %>
    </div>
  <% end %>

  <h3>既に登録済みの方</h3>
  <p><%= link_to "こちら", new_user_session_path %>からログインしてください。</p>
</div>